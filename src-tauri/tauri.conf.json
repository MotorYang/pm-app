{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pm-app",
  "version": "0.1.0",
  "identifier": "github.motoryang.pm-app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "项目管理",
        "width": 1250,
        "height": 800,
        "decorations": false,
        "resizable": true,
        "transparent": false,
        "minWidth": 1024,
        "minHeight": 800
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  }
}
