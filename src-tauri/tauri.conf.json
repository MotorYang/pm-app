{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pomo",
  "version": "1.2.5",
  "identifier": "github.motoryang.pomo",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Pomo",
        "width": 1250,
        "height": 800,
        "decorations": false,
        "resizable": true,
        "transparent": false,
        "minWidth": 1024,
        "minHeight": 800
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "deb", "dmg"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/icon.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ],
    "resources": []
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": ["https://motoryang.github.io/pm-app/update.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDkzNDI4MTQ3QjEzQjUwQjAKUldTd1VEdXhSNEZDa3hDUk1pN2E2ekhQL2V0V25NV3VSMTAvQUNKMVdwZHFLdDVTZVcrc2E5bDEK"
    }
  }
}